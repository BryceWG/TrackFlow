{
  "name": "trackflow",
  "version": "0.3.1",
  "description": "TrackFlow Desktop App",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BryceWG/TrackFlow.git"
  },
  "homepage": "https://github.com/BryceWG/TrackFlow",
  "bugs": {
    "url": "https://github.com/BryceWG/TrackFlow/issues"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "concurrently \"npm run watch\" \"npm run start\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.trackflow.app",
    "productName": "TrackFlow",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend/dist"
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "../icon_512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TrackFlow",
      "uninstallDisplayName": "TrackFlow",
      "artifactName": "TrackFlow-Setup-${version}-win.${ext}"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "../icon_512.png",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "TrackFlow-${version}-mac.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "../icon_512.png",
      "category": "Utility",
      "artifactName": "TrackFlow-${version}-linux.${ext}"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release",
      "private": false
    }
  },
  "author": {
    "name": "BryceWG",
    "email": "brycewg@hnu.edu.cn"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.5",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "webdav": "^4.11.4"
  }
}
